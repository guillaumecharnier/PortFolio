{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        <div class="box-wrapper">
            <div class="title-box">
                <h2>About Me</h2>
            </div>
            <a href="{{ path('app_show_presentation') }}" class="box presentation" id="presentation-link"></a>
        </div>
        <div class="box-wrapper">
            <div class="title-box">
                <h2>Mon CV</h2>
            </div>
            <a href="https://www.canva.com/design/DAGIJNSnwiM/CBd69Tx317AQZ-ku6GF17w/view?utm_content=DAGIJNSnwiM&utm_campaign=designshare&utm_medium=link&utm_source=editor" class="box cv" id="cv-link"></a>
        </div>
        <div class="box-wrapper">
            <div class="title-box">
                <h2>Mes projets</h2>
            </div>
            <a href="{{ path('app_show_projet') }}" class="box projects" id="projects-link"></a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const boxes = document.querySelectorAll('.box');

            boxes.forEach(box => {
                box.addEventListener('mouseover', function() {
                    this.classList.add('box-hover');
                });

                box.addEventListener('mouseout', function() {
                    this.classList.remove('box-hover');
                });
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background-image: url('/PortFolio/ressources/person-playing-3d-video-games-device.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #222222;
            color: #ffffff;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        .box-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .title-box {
            width: 200px; /* Correspond à la largeur des boîtes */
            background-color: rgba(0, 0, 0, 0.5); /* Fond semi-transparent */
            padding: 10px;
            text-align: center;
            border-radius: 10px 10px 0 0;
            margin-bottom: 10px; /* Espace entre le titre et la boîte */
        }

        .box {
            width: 200px; /* Largeur fixe */
            height: 200px; /* Hauteur fixe */
            padding: 20px; /* Espace intérieur */
            background-color: #3498db; /* Couleur de fond par défaut */
            border-radius: 10px;
            color: #ffffff;
            font-size: 1.2rem;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s ease-out, transform 0.3s ease-out;
            cursor: pointer;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            position: relative;
            background-size: cover;
            background-position: center;
        }

        .box::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(255, 255, 255, 0.2);
            filter: blur(10px);
            transition: opacity 0.3s ease-out;
            z-index: -1;
            opacity: 0;
            border-radius: 10px;
        }

        .box:hover::after {
            opacity: 1;
        }

        .box-hover {
            animation: shake 1s infinite;
        }

        @keyframes shake {
            0%, 100% {
                transform: translate(0, 0);
            }
            10%, 30%, 50%, 70%, 90% {
                transform: translate(-3px, -3px);
            }
            20%, 40%, 60%, 80% {
                transform: translate(3px, 3px);
            }
        }

        /* Style personnalisé pour les liens */
        .box {
            background-color: blue; /* Bleu */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .box:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        /* Style spécifique pour chaque lien avec une image de fond différente */
        /* Lien Mon CV */
        #cv-link {
            background-image: url('/PortFolio/ressources/CV2.png');
            background-color: rgba(0, 0, 0, 0.3);
        }

        /* Lien Mes Projets */
        #projects-link {
            background-image: url('/PortFolio/ressources/Projet.png');
            background-color: rgba(0, 0, 0, 0.3);
        }

        /* Lien Présentation */
        #presentation-link {
            background-image: url('/PortFolio/ressources/presentation.png');
            background-color: rgba(0, 0, 0, 0.3);
        }
    </style>
{% endblock %}